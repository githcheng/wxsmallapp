.container {
  background-color: white;
}


.item_view {
    width: 96%;
    height: 210rpx;
    display: flex;
    flex-direction: column;  
    align-items:flex-start;  
}

.item_c_t_text {
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;  
    justify-content:space-around;  
    align-items:flex-start; 
    padding-top: 10rpx; 
}

.item_c_t_text text{
    background-color: white;
}

.line {
    width: 100%;
    height: 10rpx;
    background-color: #F2f2f2;
}

.item_date {
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;  
    justify-content:center;  
    align-items:center;  
}

.item_date image{
    width: 50rpx;
    height: 50rpx;
}

.item_date text{
    height: 100%;
    font-size: 18px;
}

.item_date_text{
    background-color: beige;
    padding-left: 16rpx;
}

.item_date_lable_text{
