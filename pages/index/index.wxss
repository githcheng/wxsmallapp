.container {
  padding-top: 0px;
  background-color: #F2f2f2;
}

/*轮播*/
.swiper_box {
  /*width: 100%;*/
  height: 187.5px;
}
swiper.swiper {
  height: 100%;
}
.swiper-item {
    display: block;
    height: 100%;
}
.slide-image {
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

/*分类*/
.index-nav {
  height: 80px;
  /*background: red;*/
  display: flex;
  flex-direction: row;
  /*align-items: center;*/
  background-color: #fff;
  color: #646464;
}
.index-nav view {
  flex: 1;
  flex-direction: column;
  border-right: 1px solid #F2f2f2;
}
.index-nav image {
  width: 38px;
  height: 38px;
}
.index-nav text {
  font-size: 16px;
}


view.text {
  display: flex;
  align-items: center;
  position: relative;
  padding: 10px 10px 10px 12px;
  font-size: 15px;
  color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}
.line_y {
  width: 3px;
  height: 18px;
  display: inline-block;
  background-color: #09bb07;
}
view.text text {
  margin-left: 10px;
  line-height: 18px;
}



.line_spe {
  width: 100%;
  height: 3px;
  display: inline-block;
  background-color: #09bb07;
}

.cell {
   background: white; width: 185rpx; height: 140rpx; display: inline-block;
   border-right: 2px solid #F2f2f2;
}
.cellitem {
   background: white; width: 100%; height: 100%; display: flex;
   flex-flow: column;align-items: center;
}

.cellitem image {
  width: 38px;
  height: 38px;
}

.cellitem text {
  color: black;
}




/* 去掉水平滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: flex;
}

.item {
  padding: 8px;
  background-color: #fff;
  border-top: 1px solid #e4e4e4;
  color: #787878;
}

.item image {
  display: block;
  width: 129px;
  height: 114px;
}

.item-right {
  margin-left: 11px;
}

