/**
 * layout
 *
 * 说明
 * l:layout
 * r:row
 * l:left
 * r:right
 * c:center
 */

.l-r {
  display: flex;
}

/*l_auto:占用剩下的*/
.l_auto {
  flex: 1;
}
.l-c {
  display: flex;
  /*justify-content: center;*/
  align-items: center;
}
/*垂直水平居中对齐*/
.l-c-c {
  display: flex;
  justify-content: center;
  align-items: center;
}



.item {
  padding: 8px;
  background-color: #fff;
  border-top: 1px solid #e4e4e4;
  color: #787878;
}

.item image {
  display: block;
  width: 129px;
  height: 114px;
}

.item-right {
  margin-left: 11px;
}
